<form action="/login" method="post" class="form-horizontal col-md-offset-4 col-md-4" role="form">

  <div class="form-group">
    <label for="username" class="col-md-3 control-label">Username:</label>
    <div class="col-md-9">
      <input type="text" class="form-control" id="username" name="username" placeholder="Enter your username here" pattern="[0-9a-zA-Z_\-\.]{2,32}" required autofocus>
    </div>
  </div>

  <div class="form-group">
    <label for="password" class="col-md-3 control-label">Password:</label>
    <div class="col-md-9">
      <input type="password" class="form-control" id="password" name="password" placeholder="Your secret password" pattern=".{8,32}" required>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-3 col-md-9">
      <button type="submit" class="btn btn-default"><span class='glyphicon glyphicon-ok'></span> Login</button>
    </div>
  </div>

  <a class="pull-left" href="/registration">Not yet registered?</a>
  <a class="pull-right" href="/retrieval">Lost your password?</a>

</form>


{{#if message}}
<div class="alert alert-warning">{{message}}</div>
{{/if}}
